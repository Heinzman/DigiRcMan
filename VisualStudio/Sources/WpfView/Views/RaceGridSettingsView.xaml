<Window x:Class="Heinzman.WpfView.Views.RaceGridSettingsView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
        Title="MainWindow" 
        Height="350" 
        Width="525">
    <Grid>
        <StackPanel Orientation="Vertical">
            <GroupBox Header="Column Status">
                <StackPanel Orientation="Horizontal">
                    <Label Content="Header Text" />
                    <TextBox Width="200" />
                    <CheckBox Content="Is Visible" VerticalAlignment="Center" FlowDirection="RightToLeft" />
                    <Label Content="Font Size" />
                    <TextBox Width="30" />
                </StackPanel>
            </GroupBox>
            
        </StackPanel>
    </Grid>
</Window>
